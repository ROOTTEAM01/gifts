<div class="category-tab">
<div class="container">
<h2 class="heading">
  <div class="tab-heading">
    <span><b>Gifts for</b> all occasions</span>
  </div>
  <ul class="nav nav-tabs cat-tab text-right">
    {% set i = 0 %}
    {% for category in categories %}
      <li><a href="#tab-{{loop.index}}" data-bs-toggle="tab" {% if loop.index0 == 0 %}class="active"{% endif %}>{{ category.category }}</a></li>
    {% set i = i + 1 %}
    {% endfor %}
  </ul>
</h2>

<div class="tab-content" role="tablist">
{% for category in categories %}
<div class="tab-pane fade  {% if loop.index0 == 0 %} show active {% endif %}" id="tab-{{loop.index}}">
<div class="rless">
  <div class="cattab">
  {% for product in category.products %}
    <div class="col cless">{{ product }}</div>
  {% endfor %}
</div>
</div>
</div>
{% endfor %}
</div>
</div>
</div>


