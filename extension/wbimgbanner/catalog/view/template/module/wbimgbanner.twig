<div class="wbimg col-md-6 col-xs-12"> 
    <div class="row"> 
          {% for banner in banners %}
          <div class="col-md-6 col-xs-12 cless imgdec">
              <div class="beffect">
              <div class="imgimg">
              {% if banner.link %}
                <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="mx-auto img-fluid"/></a>
              {% else %}
                <img src="{{ banner.image }}" alt="{{ banner.title }}" class="mx-auto img-fluid"/>
              {% endif %}
              </div>
            </div>
            <div class="imgtext">
              <div class="imgdesc">
                {{ banner.description }}
              </div>
            </div>
          </div>
      {% endfor %}
  </div>
</div>
</div>
</div>
</div>