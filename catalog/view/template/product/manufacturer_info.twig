
{{ header }}

<div class="pb-50">
<div id="product-manufacturer" class="container manucom">
<!-- Breadcrumb -->
<div class="d-flex justify-content-between align-items-center back-page">
  <div class="">
  <div class="back-to-home">
      <a href="{{ home }}"><img src="image/catalog/back-to-home.svg" alt="Back to home"> &nbsp <span> {{ back_to_main }}</span></a>
   </div>  
  </div>
  <div class="">
    <ul class="breadcrumb ">
      {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>  
  </div> 
</div>
<!-- Breadcrumb end -->
  <div class="row">{{ column_left }}
    <div id="content" class="col">{{ content_top }}
       <h2 class="heading">
        <span>{{ heading_title }}</span>
      </h2>
      {% if products %}
        <div id="display-control" class="row cate-border">
         <div class="col-md-1 d-none d-md-block lgrid">
            <div class="btn-group">
               <button type="button" id="button-list" class="btn listgridbtn" data-bs-toggle="tooltip" title="{{ button_list }}"><svg width="20px" height="20px"><use xlink:href="#clist"></use> </svg></button>
              <button type="button" id="button-grid" class="btn listgridbtn" data-bs-toggle="tooltip" title="{{ button_grid }}"><svg width="18px" height="18px"><use xlink:href="#cgrid"></use> </svg></button>
            </div>
          </div>
          <div class="col-md-3">
            <div class="mb-3">
              <a href="{{ compare }}" id="compare-total" class="btn btn-link d-block"><span class="d-inline d-md-none d-lg-inline">{{ text_compare }}</span></a>
            </div>
          </div>
          <div class="col-md-4 col-6 catesort">
            <div class="input-group mb-3">
              <div class="input-group">
                <label for="input-sort" class="input-group-text">{{ text_sort }}</label>
                <select id="input-sort" class="form-select" onchange="location = this.value;">
                  {% for sorts in sorts %}
                    <option value="{{ sorts.href }}"{% if sorts.value == '%s-%s'|format(sort, order) %} selected{% endif %}>{{ sorts.text }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
          <div class="col-md-3 col-6 catesort">
            <div class="input-group mb-3">
              <div class="input-group">
                <label for="input-limit" class="input-group-text">{{ text_limit }}</label>
                <select id="input-limit" class="form-select" onchange="location = this.value;">
                  {% for limits in limits %}
                    <option value="{{ limits.href }}"{% if limits.value == limit %} selected{% endif %}>{{ limits.text }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
        </div>
        <div id="product-list" class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4">
          {% for product in products %}
            <div class="col">{{ product }}</div>
          {% endfor %}
        </div>
        <div class="row pagi">
          <div class="col-sm-6 text-start">{{ pagination }}</div>
          <div class="col-sm-6 text-end">{{ results }}</div>
        </div>
      {% else %}
        <p>{{ text_no_results }}</p>
        <div class="d-inline-block pt-2 pd-2 w-100">
          <div class="float-end"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
</div>
{{ footer }}
