{% if total_product > 0 %}
	{% for product in products %}
<div class="workdo-cat col-sm-7 col-xs-12 text-left">
	<div class="searchbr row rless">
    <div class="product-info col-lg-4 col-sm-6 col-xs-4 cless image">
    	<a href="{{ product.href }}">
    		<img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="mx-auto img-fluid" />
    	</a>
    	{# <a href="{{ href }}"><img src="{{ thumb }}" alt="{{ name }}" title="{{ name }}" class="img-fluid"/></a> #}
   	</div>
   	<div class="workdo-dis col-lg-8 col-sm-6 col-xs-8 cless">
   		<h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
   		{# <p class="list-des">{{ product.description }}</p> #}
		    {% if product.price %}
		        <div class="price">
		          {% if not product.special %}
		          {{ product.price }}
		          {% else %}
		          <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
		          {% endif %}
		        </div>
		    {% endif %}
	</div>
</div>
</div>
{% endfor %}
{% else %}
	<div><p>There is no product that matches the search criteria.</p></div>
{% endif %}