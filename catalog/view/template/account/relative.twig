{{ header }}
<div class="pb-50">
    <div id="account-relative" class="container acpage">
        <div class="d-flex justify-content-between align-items-center back-page">
            <div class="">
                <div class="back-to-home">
                    <a href="{{ home }}"><img src="image/catalog/back-to-home.svg" alt="Back to home"> &nbsp <span>{{ back_to_main }}</span></a>
                </div>
            </div>
            <div class="">
                <ul class="breadcrumb ">
                    {% for breadcrumb in breadcrumbs %}
                        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-between pb-50">
                    <h3>{{ heading_title }}</h3>
                    <a href="{{ add_relative }}" class="btn btn-primary">{{ button_add }}</a>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Description</th>
                            <th>Occasion Type</th>
                            <th>Day</th>
                            <th>Delivery Time</th>
                            <th>Remember Me Week</th>
                            <th>Remember Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if relatives %}
                            {% for relative in relatives %}
                                <tr>
                                    <td>{{ relative.name }}</td>
                                    <td>{{ relative.surname }}</td>
                                    <td>{{ relative.description }}</td>
                                    <td>{{ relative.occasion_type }}</td>
                                    <td>{{ relative.day }}</td>
                                    <td>{{ relative.delivery_time }}</td>
                                    <td>{{ relative.remember_me_week }}</td>
                                    <td>{{ relative.remember_type }}</td>
                                    <td>
                                        <a href="{{ edit_relative }}&id={{ relative.id }}" class="btn btn-primary btn-edit">Edit</a>
                                        <a href="{{ action }}&delete=1&id={{ relative.id }}" class="btn btn-danger btn-delete">Delete</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="9">{{ text_no_relatives }}</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.btn-delete');
    deleteButtons.forEach(function (button) {
        button.addEventListener('click', function (event) {
            event.preventDefault();
            const confirmDelete = confirm("Are you sure you want to delete this item?");
            if (confirmDelete) {
                window.location.href = button.href;
            }
        });
    });
});
</script>
{{ footer }}
